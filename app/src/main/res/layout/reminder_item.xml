<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
   card_view:cardElevation="10dp"
    card_view:cardCornerRadius="0dp"
    android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:elevation="10dp"
                android:padding="15dp">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_top"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="30dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:backgroundTint="#ffffff">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_iv"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="29dp">


                        <androidx.cardview.widget.CardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            card_view:cardCornerRadius="28dp">
                            <ImageView
                                android:id="@+id/image_bg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/lay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_play"/>

                    <TextView
                        android:id="@+id/voice_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:text="Play Voice Note"
                        android:textColor="#ffffff"/>
                </LinearLayout>


    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/lay1"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/delete"
        android:layout_toRightOf="@id/card_view_top">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_clock"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:layout_marginBottom="-3dp"
                    android:text="6:00 AM"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#ffffff" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:paddingLeft="5dp"
                    android:text="29 Mar,2020"
                    android:textSize="13sp"
                    android:textColor="#BFFFFFFF"/>


            </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0.3dp"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="#99FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lay2">

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="3dp"-->
<!--            android:background="@drawable/ic_mail"/>-->

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="15sp"
            android:text="Message"
            android:layout_marginRight="35dp"
            android:includeFontPadding="false"
            android:textColor="#ffffff" />
    </LinearLayout>
    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_trash"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>






            </LinearLayout>



</androidx.cardview.widget.CardView>